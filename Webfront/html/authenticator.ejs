<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=0.7">
        <title><%= Client.Name %> | Profile Overview</title>
        <meta property="og:title" content="Server Overview | Node Server Manager">
        <meta property="og:type" content="website">
        <meta property="og:description" content="Node Server Manager is an administration tool focused on Dedicated Servers">
        <meta name="description" content="<%= Client.Name %> | Profile Overview">
        <meta name="keywords" content="IW4MAdmin, IW5, Plutonium, T6, NodeJs, server, administration, IW4x, MW2, Modern Warfare 3">
        <script type='text/javascript' src='/js/main.js'></script>
        <script type='text/javascript' src='/js/authenticator.js'></script>
        <link rel="stylesheet" type="text/css" href="/css/xbbcode.css">
        <link rel="stylesheet" type="text/css" href="/css/xbbcode.css">
        <script src="/js/xbbcode.js" type="text/javascript"></script>
        <script src="/js/xbbcode.js" type="text/javascript"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
        <script src="/js/moment-with-locales.js" type="text/javascript"></script>
        <script src="/js/moment-timezone-with-data-10-year-range.js" type="text/javascript"></script>
        <script type='text/javascript' src='/js/font-awesome.js'></script>
        <link rel='stylesheet' type='text/css' href='/css/global.css'></link>
    </head>
    <body>
        <%- header%>
        <div class='wf-profile wf-default'>
            <div class='wf-client-auth wf-client-auth-title'>
                <div>Name</div>
                <div>Server</div>
                <div>Clientslot</div>
                <div>IP Address</div>
                <div>Actions</div>
            </div>
            <%if (clientsToAuth.length > 0) {%>
                <% clientsToAuth.forEach(clientToAuth => { %>
                    <div class='wf-client-auth wf-client-auth-row'>
                        <div><%= clientToAuth.Name %></div>
                        <div colorcode><%= clientToAuth.Server.HostnameRaw %></div>
                        <div><%= clientToAuth.Clientslot %></div>
                        <div><%= clientToAuth.IPAddress %></div>
                        <div>
                            <div class='wf-auth-button' data-allow='<%= clientToAuth.Session.ID %>'>Allow</div>
                            <div class='wf-auth-button' data-kick='<%= clientToAuth.Session.ID %>'>Kick</div>
                        </div>

                    </div>
                <% }) %>
            <% } else {%>
                No in-game logins to authorize
            <% } %>
        </div>
    </body>
</html>